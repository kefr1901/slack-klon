<!DOCTYPE html>
<html>

<head>
  <title> </title>

  <link rel='stylesheet' href='/stylesheets/style.css' />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.js"></script>
  <script defer src="script.js"></script>
</head>

<body>
  <!-- Head navigation -->


  <div class="sidenav">

    <img id="side_logo" src="images/talck_logo.png">
    <h2 id="logo_text">SNACK</h2>
    <br>
    <button id="add_room_btn">LÃ¤gg till rum!</button>
    <a href="#" ># Main Channel</a>
  
    <hr>
    <br>
    <!-- Side navigation-->
    <div id="profil_pic">
      
    </div>
    <h2> REGISTERED USERS</h2>
    <div id="useronline">
      
        <% for(let i=0; i < data.length; i++){ %>
        <a><li> <i id="person" class="fas fa-user"> </i> <%= data[i].username %> </li></a>
       <% } %>
      
    </div>
  </div>

  <!-- Main -->
  <div class="main">
      <div id="chatbox" >
        <div id="msg-cont">
            <% for(let i=0; i < message.length; i++){ %>
              <div class="chatbox_output">
                <%= message[i].name %>     
                   <%= "earlier said:" %>
              <%= message[i].message %>
              
            </div>
              
              <% } %>
      </div>
    </div>

  </div>

  <form method="POST" id="snd-cont" name="" action="/chat"> 

    <input id="msg-inp" type="text" name="msg-inp" placeholder="Skriv ditt meddelande.."></input><button id="snd-btn" type="submit">Skicka</button>
  
  </form>
  

  <!--<script defer src="http://localhost:3000/socket.io/socket.io.js"></script>
  <script defer src="/script.js"></script>-->

  <script src="https://kit.fontawesome.com/692051db43.js" crossorigin="anonymous"></script>
</body>

</html>